{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": false, // prod - false
        "sourceMap": false, // prod - false
        "outDir": "./lib",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
    }
}